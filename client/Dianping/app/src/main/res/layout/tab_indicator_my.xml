<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Home.Holo.Tab">

    <ImageView android:layout_gravity="center|top"
        android:id="@+id/home_tab_my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:src="@drawable/main_index_my"
        android:scaleType="center" />
    <TextView android:textSize="@dimen/text_very_small"
        android:textColor="@color/text_color_darkgray_to_white"
        android:gravity="bottom|center"
        android:layout_gravity="center"
        android:id="@android:id/title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/home_tab_marginBottom"
        android:singleLine="true" />
</FrameLayout>