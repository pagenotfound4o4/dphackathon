<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dip"
        android:orientation="horizontal"
        android:background="#ffffff">
        <FrameLayout
            android:layout_width="106dip"
            android:layout_marginTop="12dip"
            android:layout_marginLeft="10dip"
            android:layout_marginBottom="12dip"
            android:layout_height="match_parent">

            <com.android.volley.toolbox.NetworkImageView android:id="@+id/item_img"
                android:layout_width="match_parent"
                android:layout_marginTop="4dip"
                android:layout_height="match_parent" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="255dip"
            android:layout_marginLeft="6dip"
            android:layout_marginTop="12dip"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:id="@+id/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:text="dongshoubqa"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="7dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.android.volley.toolbox.NetworkImageView android:id="@+id/item_rating"
                    android:layout_width="77dip"
                    android:layout_height="20dip"
                    android:src="@drawable/star0"/>
                <TextView android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:layout_height="wrap_content"
                    android:text="ssds"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal"
                android:layout_marginTop="5dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:id="@+id/item_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_grey"
                    android:text="sss"/>
                <TextView android:id="@+id/item_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:text="ttt"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>